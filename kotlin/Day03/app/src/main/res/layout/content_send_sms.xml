<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_send_sms"
        tools:context=".SendSMSActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/contentText"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toTopOf="@+id/contentText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/contentText"
            app:layout_constraintTop_toBottomOf="@+id/phoneText" android:layout_marginBottom="290dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
</android.support.constraint.ConstraintLayout>